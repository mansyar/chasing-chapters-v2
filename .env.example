# Database
DATABASE_URI=postgresql://postgres:YOUR_SECURE_PASSWORD@postgres:5432/chasing-chapters
PAYLOAD_SECRET=YOUR_VERY_LONG_AND_SECURE_SECRET_KEY_HERE

# Cloudflare R2 Storage
R2_BUCKET=your-bucket-name
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=your-access-key-id
R2_SECRET_ACCESS_KEY=your-secret-access-key
R2_PUBLIC_URL=https://your-bucket.your-domain.com

# Site URL (for sitemap, OG images, etc.)
NEXT_PUBLIC_SITE_URL=https://chasing-chapters.com

# Production PostgreSQL (for docker-compose.prod.yml)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=YOUR_SECURE_PASSWORD
POSTGRES_DB=chasing-chapters

# SSL/Let's Encrypt (for Traefik)
ACME_EMAIL=your-email@example.com

# Optional: Sentry Error Tracking
# SENTRY_DSN=https://your-sentry-dsn

# Google Cloud Translation API
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=./google-cloud-credentials.json
# OR use inline JSON (for Docker deployments)
# GOOGLE_CLOUD_CREDENTIALS={"type":"service_account","project_id":"..."}